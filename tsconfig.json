{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@prisma/*": ["node_modules/@prisma/*"],
      "dotenv": ["./node_modules/dotenv"]
    },

  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
